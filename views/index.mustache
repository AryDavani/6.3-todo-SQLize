<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todos</title>
  </head>
  <body>
    <div>

      <h2>Todo List</h2>

      <form class="" action="/" method="post">
        <input type="text" name="todo" value="" placeholder="Add a todo...">
        <input type="text" name="assignee" value="" placeholder="For person...">
        <input type="submit" name="" value="Add todo!">
      </form>

      <h4>Current Todos:</h4>
        {{#todos}}
          {{^completed_at}}
            <form class="" action="/complete" method="post">
              <input type="hidden" name="id" value="{{id}}">
              <input type="submit" name="" value="Mark Complete">
              <span>{{item}} - {{assigned_to}}</span>
            </form>
          {{/completed_at}}
        {{/todos}}

      <h4>Completed Todos</h4>
      <ul>
      {{#todos}}
        {{#completed_at}}
          <li>{{item}}</li>
        {{/completed_at}}
      {{/todos}}
      </ul>

  </body>
</html>
